{% extends "layout.twig" %}

{% block title %}{% if fornecedor.getID() > 0 %} Atualizar {% else %} Cadastrar {% endif %} Fornecedor{% endblock %}

{% block content %}
    <h1>{% if fornecedor.getID() > 0 %} Atualizar {% else %} Cadastrar {% endif %} Fornecedor</h1>
    <form role="form" method="post" action="{{ action }}">
        <input type="hidden" id="id" name="id" value="{{ fornecedor.getID() }}">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Nome</label>
                    <input class="form-control" id="nome" name="nome" value="{{ fornecedor.getNome() }}">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" id="email" name="email" value="{{ fornecedor.getEmail() }}">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-default" type="submit">Enviar</button>
                <button class="btn btn-primary" id="btn_listar" type="button">Listar Fornecedores</button>
            </div>
        </div>
    </form>
{% endblock %}

{% block script %}
<script type="text/javascript">
    $(document).ready(function() {
        $('#btn_listar').click(function () {
            location.href = '{{ linkListar }}';

            $('button').attr('disabeld', true);
        });
    });
</script>
{% endblock %}