{% extends "layout.twig" %}

{% block title %}{% if produto.getID() > 0 %} Atualizar {% else %} Cadastrar {% endif %} Produto{% endblock %}

{% block content %}
    <h1>{% if produto.getID() > 0 %} Atualizar {% else %} Cadastrar {% endif %} Produto</h1>
    <form role="form" method="post" action="{{ action }}">
        <input type="hidden" id="id" name="id" value="{{ produto.getID() }}">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Fornecedor</label>
                    <select id="id_fornecedor" name="id_fornecedor" class="form-control">
                        <option value="0">Selecione</option>
                        {% for fornecedor in listaFornecedor %}
                            <option value="{{ fornecedor.id }}" {% if produto.getFornecedor.getID() == fornecedor.id %} selected="selected" {% endif %}>{{ fornecedor.nome }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" value="{{ produto.getNome() }}">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label>Unidades</label>
                    <input type="text" class="form-control" id="unidade" name="unidade" value="{{ produto.getUnidade() }}">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button class="btn btn-default" type="submit">Enviar</button>
                <button class="btn btn-primary" id="btn_listar" type="button">Listar Produtoes</button>
            </div>
        </div>
    </form>
{% endblock %}

{% block script %}
<script type="text/javascript">
    $(document).ready(function() {
        $('#btn_listar').click(function () {
            location.href = '{{ linkListar }}';

            $('button').attr('disabeld', true);
        });
    });
</script>
{% endblock %}